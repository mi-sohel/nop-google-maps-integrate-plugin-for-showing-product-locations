@using Nop.Web.Framework.UI
@model Nop.Plugin.Widgets.BsProductLocation.Models.ServiceAreaModel

@{
    //page title
    ViewBag.Title = "Create Service Group";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Manage ServiceArea");
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Create Service Area 
            <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink("BackToList", "ServiceAreaList")</small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
          
        </div>
    </div>
    @Html.Partial("~/Plugins/Widgets.BsProductLocation/Views/ProductLocation/_CreateOrUpdateServiceArea.cshtml", Model)
}